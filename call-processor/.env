# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/call_processing

# API
API_PORT=8080
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Storage
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=call-recordings
S3_USE_PATH_STYLE=true

# Transcription
DEFAULT_LANGUAGE=en-US
DEFAULT_STT_ENGINE=google
GOOGLE_STT_API_KEY=your-google-api-key

# Worker
WORKER_COUNT=5
WORKER_POLLING_INTERVAL_MS=5000

# Event system (using in-memory for now)
KAFKA_ENABLED=false

BULK_MAX_ITEMS=1000
BULK_WORKERS=5
BULK_BATCH_SIZE=50
BULK_DEFAULT_PRIORITY=5